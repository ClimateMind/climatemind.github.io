.teaser
  position relative
  background linear-gradient(90deg, darkBlue, teal)
  color white
  display flex
  justify-content center
  align-items center
  flex-direction column
  padding 20px 0
  +above('tablet')
    padding 40px 0

  /*
  &:after
    position absolute
    content ''
    top -1px
    left 0
    width 100%
    height 60px
    fill red
    background-image url("images/wave.svg")
    background-repeat repeat-x
    background-size 100%
    */

  &__wrapper
    margin 0 gutter

  &__content
    +above('tablet')
      margin 0 auto
      max-width 600px

  &__headline
    margin 12px 0
    headline(32px)
    +above('tablet')
      font-size 44px
      text-align center
      margin 32px 0
    +above('desktop')
      font-size 52px

  &__subline
    subline(22px)
    margin 12px 0
    +above('tablet')
      font-size 28px

  &__text
    font-size 18px
    margin 8px 0
    +above('tablet')
      font-size 20px
      margin 12px 0

  &__decoration
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__wave-top
    position absolute
    top 0
    left 0
  &__wave-bottom
    position absolute
    bottom 0
    left 0

.about-us
  background-color darkTeal
  color white
  padding 20px 0

  &__wrapper
    margin 0 gutter
    display flex
    flex-direction column
    +above('tablet')
      margin 0 auto
      padding 0 32px
      flex-direction row
      max-width 1000px
    +above('desktop')
      padding 0 60px

  &__teaser
    margin 12px 0 32px 0
    display flex
    flex-direction column
    max-width 400px
    +above('tablet')
      max-width 500px
      padding-left 40px
    +above('desktop')
      padding-left 60px
      flex-basis 600px

  &__icon
    align-self flex-end
    width 220px

  &__headline
    margin 12px gutter 0 gutter
    headline(30px)
    +above('tablet')
      font-size 44px
      text-align center
      margin 32px 0
    +above('desktop')
      font-size 52px

  &__slogan
    subline(18px)
    margin 12px 0
    max-width 80%
    +above('tablet')
      font-size 22px
    +above('desktop')
      font-size 28px

  &__subline
    subline(22px)
    margin 12px 0
    +above('tablet')
      font-size 28px

  &__text
    font-size 18px
    margin 8px 0
    +above('tablet')
      font-size 20px
      margin 12px 0
