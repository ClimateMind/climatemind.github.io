.teaser
  position relative
  background linear-gradient(90deg, rgba(darkBlue, 0.85), rgba(teal, 0.85))
  color darkTeal
  display flex
  justify-content center
  align-items center
  flex-direction column
  padding 72px 0
  +above('tablet')
    padding 80px 0 120px 0
  +above('desktop')
    padding 100px 0 120px 0

  &__wrapper
    margin 0 gutterLarge

  &__content
    +above('tablet')
      margin 0 auto
      max-width 600px

  &__headline
    margin 12px 0
    headline(32px)
    +above('tablet')
      font-size 44px
      text-align center
      margin 32px 0
    +above('desktop')
      font-size 52px

  &__subline
    subline(22px)
    margin 32px 0
    +above('tablet')
      margin 40px 0
      text-align center
      font-size 28px

  &__text
    font-size 18px
    margin 16px 0
    +above('tablet')
      font-size 20px
      margin 20px 0

  &__decoration
    pointer-events none
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__wave-top
    position absolute
    top -1px
    top 0
    left 0
    width 100%
    height 40px
    background-image url('images/wave/wave-top-mobile.svg')
    background-position-x 100px
    +above('tablet')
      height 50px
      background-image url('images/wave/wave-top.svg')
      background-position-x center
  &__wave-bottom
    position absolute
    bottom -1px
    left 0
    width 100%
    height 40px
    background-image url('images/wave/wave-bottom-mobile.svg')
    background-position-x 100px
    +above('tablet')
      height 50px
      background-image url('images/wave/wave-bottom.svg')
      background-position-x center


/*** ABOUT US ***/
.about-us
  background-color darkTeal
  color white
  padding 40px 0
  +above('tablet')
    padding 40px 0 100px 0
  +above('desktop')
    padding 40px 0 80px 0

  &__wrapper
    margin 0 gutterLarge
    display flex
    flex-direction column
    +above('tablet')
      margin 0 auto
      padding 0 32px
      flex-direction row
      max-width 1000px
    +above('desktop')
      padding 0 60px

  &__teaser
    margin 12px 0 32px 0
    display flex
    flex-direction column
    max-width 400px
    +above('tablet')
      max-width 500px
      padding-left 40px
    +above('desktop')
      padding-left 60px
      flex-basis 600px

  &__icon
    align-self flex-end
    width 220px

  &__headline
    margin 12px gutterLarge 0 gutterLarge
    headline(30px)
    +above('tablet')
      font-size 44px
      text-align center
      margin 32px 0
    +above('desktop')
      font-size 52px

  &__slogan
    subline(18px)
    margin 12px 0
    max-width 80%
    +above('tablet')
      font-size 22px
    +above('desktop')
      font-size 28px

  &__subline
    subline(22px)
    margin 12px 0
    +above('tablet')
      font-size 28px

  &__text
    font-size 18px
    margin 16px 0
    +above('tablet')
      font-size 20px
      margin 20px 0



