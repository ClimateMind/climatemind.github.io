@require "reset"
global-reset()

@require "rupture"
rupture.scale = 0 640px 1024px
rupture.scale-names = 'mobile' 'tablet' 'desktop'
gutterSmall = 20px
gutterLarge = 36px
maxWidthSmall = 1000px
maxWidthLarge = 1200px

// base variables
darkBlue = #006080
darkTeal = #07373B
teal = #70D7CC
green = #32E39F
green-hover = #82EFC5

bodyFont = bilo, sans-serif
titleFont = atten-round-new, sans-serif

// base styles
body
  font-family bodyFont
  font-weight 400
  line-height 1.3
  -webkit-font-smoothing antialiased
  --cta-color orange

p
  font-weight 300

.link
  color green
  text-decoration none
  emphasizedBody(20px)
  +above('tablet')
    font-size 24px
  &:hover
  &:focus
    text-decoration underline

// mixins
content-container(padding = gutterLarge, maxWidth = maxWidthLarge)
  max-width maxWidth
  margin 0 auto
  padding 0 padding

headline(fontSize)
  font-family titleFont
  font-size fontSize
  font-weight 800
  line-height 1.1

subline(fontSize)
  font-family titleFont
  font-size fontSize
  font-weight 500
  line-height 1.1

emphasizedBody(fontSize)
  font-size fontSize
  font-weight 500

// Module imports
@require "layout"
@require "header"
@require "hero"
@require "panels"
@require "footer"
@require "form"
